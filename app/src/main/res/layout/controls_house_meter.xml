<kr.or.kashi.hde.device.HouseMeterView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|top"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/meter_type_check"
            android:text="Meter Type:"
            style="@style/TitleCheckStyle2" />

        <TextView
            android:id="@+id/meter_type_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />

        <Spinner
            android:id="@+id/meter_type_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|top"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/meter_state_check"
            android:text="Meter State:"
            style="@style/TitleCheckStyle2" />

        <RadioGroup
            android:id="@+id/meter_state_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/meter_state_disabled_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disabled" />

            <RadioButton
                android:id="@+id/meter_state_enabled_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enabled" />

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|top"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/current_meter_check"
            android:text="Current Meter:"
            style="@style/TitleCheckStyle2" />

        <TextView
            android:id="@+id/current_meter_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />

        <EditText
            android:id="@+id/current_meter_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:inputType="number"
            android:text="0.0" />

        <Spinner
            android:id="@+id/current_meter_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/current_meter_set_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="\u23CE" />

        <Button
            android:id="@+id/current_meter_plus_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="+" />

        <Button
            android:id="@+id/current_meter_minus_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="-" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|top"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/total_meter_check"
            android:text="Total Meter:"
            style="@style/TitleCheckStyle2" />

        <TextView
            android:id="@+id/total_meter_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />

        <EditText
            android:id="@+id/total_meter_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:inputType="number"
            android:text="0.0" />

        <Spinner
            android:id="@+id/total_meter_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/total_meter_set_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="\u23CE" />

        <Button
            android:id="@+id/total_meter_plus_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="+" />

        <Button
            android:id="@+id/total_meter_minus_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="-" />

    </LinearLayout>

</kr.or.kashi.hde.device.HouseMeterView>
